@model IEnumerable<giveandgetwebapp.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Posts List</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contents)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpireDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiveType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReceiverCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpireType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Catalog.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.StudentId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contents)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpireDate)
        </td>
        <td>
            @if (item.GiveType == 1 )
            {
                <p>Tự chọn</p>
            }
            @if(item.GiveType == 2)
            {
                <p>Ngẫu nhiên</p>
            }
        </td>
        <td>
            @if (item.Status == 1)
            {
                <p>Bài viết được tạo thành công</p>
            }
            @if (item.Status == 2)
            {
                <p>Bài viết hết hạn</p>
            }
            @if (item.Status == 3)
            {
                <p>Bài viết chờ đánh giá</p>
            }
            @if (item.Status == 4)
            {
                <p>Bài viết đã đóng</p>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReceiverCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpireType) Days
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Catalog.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.StudentId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
